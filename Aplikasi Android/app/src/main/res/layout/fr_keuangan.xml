<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#E9E9E9"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:text="Pembayaran"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="19dp"
            android:id="@+id/pembayaran"
            android:textColor="#FF9800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/pembayaran1"
            android:layout_below="@+id/pembayaran"
            android:layout_marginTop="10dp"
            android:text="Sumbangan Pembinaan Pendidikan"
            android:textSize="21dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_below="@+id/pembayaran1"
            android:text="(SPP)/ Tunggakan Lainnya"
            android:textSize="21dp"
            android:id="@+id/pembayaran2"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:background="@drawable/bg_smstr"
            android:layout_below="@+id/pembayaran2"
            android:layout_marginTop="70dp"
            android:id="@+id/semester12"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <TextView
                android:text="Semester 1 - 2"
                android:textSize="21dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:background="@drawable/bg_smstr"
            android:layout_below="@+id/semester12"
            android:id="@+id/semester34"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <TextView
                android:text="Semester 3 - 4"
                android:textSize="21dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:background="@drawable/bg_smstr"
            android:layout_below="@+id/semester34"
            android:id="@+id/semester56"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <TextView
                android:text="Semester 5 - 6"
                android:textSize="21dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/lain"
            android:background="@drawable/btn_file"
            android:layout_below="@+id/semester56"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <TextView
                android:text="LAINNYA"
                android:textSize="21dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>