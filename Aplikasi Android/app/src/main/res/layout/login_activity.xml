<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="@drawable/bglogin"
                                             android:paddingStart="20dp"
                                             android:paddingEnd="20dp"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Selamat Datang"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginVertical="100dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="Untuk menggunakan aplikasi ini silakan login
                          menggunakan akun yang sudah di berikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:id="@+id/textView2"/>
    <EditText
            android:inputType="text"
            android:hint="Username"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/shape_edittext_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.492" android:id="@+id/emailTxt"/>
    <EditText
            android:inputType="textPassword"
            android:hint="Password"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/shape_edittext_login"
            android:layout_width="match_parent"
            android:layout_height="60dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/emailTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.492" android:id="@+id/passwordTxt"/>
    <Button
            android:id="@+id/btn_login"
            android:text="MASUK"
            android:textSize="18sp"
            android:layout_width="match_parent" android:layout_height="70dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.492"/>

</android.support.constraint.ConstraintLayout>