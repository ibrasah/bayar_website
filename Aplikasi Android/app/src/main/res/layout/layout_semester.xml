<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#E9E9E9"
                android:layout_width="match_parent"
                android:id="@+id/ll_relativeinti"
                android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbarshape"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:titleMarginTop="10dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:background="#E9E9E9"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Pembayaran"
                android:layout_marginTop="30dp"
                android:layout_marginStart="0dp"
                android:textStyle="bold"
                android:textSize="19dp"
                android:id="@+id/pembayaran"
                android:textColor="#FF9800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/pembayaran1"
                android:layout_below="@+id/pembayaran"
                android:layout_marginTop="10dp"
                android:layout_marginStart="0dp"
                android:text="Sumbangan Pembinaan Pendidikan"
                android:textSize="21dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_below="@+id/pembayaran1"
                android:layout_marginStart="0dp"
                android:text="(SPP)/ Tunggakan Lainnya"
                android:textSize="21dp"
                android:id="@+id/pembayaran2"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="Semester 1 - 2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                android:textSize="19dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/semester"
                android:layout_below="@+id/pembayaran2"
                android:textColor="#FF9800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_below="@+id/semester"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textAlignment="center"
                    android:text="Pembayaran Bulanan"
                    android:textSize="20dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-0dp"
                    android:textColor="#000000"
                    android:id="@+id/bulan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/bulan"
                    android:layout_height="2dp"
                    android:background="@color/text_orange"
            />
            <ScrollView
                    android:layout_width="match_parent"
                    android:id="@+id/scroll"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/januari"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="Januari"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/februari"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="Februari"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/maret"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="Maret"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/april"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="April"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/mei"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="Mei"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/juni"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="Juni"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/juli"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="Juli"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/agustus"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="Agustus"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/september"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="September"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/oktober"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="Oktober"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/november"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="November"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/bg_smstr"
                            android:id="@+id/desember"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="50dp">
                        <TextView
                                android:text="Desember"
                                android:textSize="21dp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>